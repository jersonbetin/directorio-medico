block js
  script.
    $(document).on("ready", function(){
      function logoutDoctorSuccess(data, textStatus, jqXHR){
        console.log(data);
        if(data){
          if(data.error){
            if(data.error.error=="WrongEmailOrPassword"){
              alert("El email o contrase√±a son incorrectos");
